@model ViolationViewModel


<div class="violation-form p-3">
    <form id="AddSeverityForm">
        <div class="form-group">
            <p>Severity violation:</p>
            <select class="browser-default custom-select" name="SeverityViolation">
                <option value="0" selected>Low</option>
                <option value="1">Medium</option>
                <option value="2">High</option>
            </select>
            <span class="text-danger error-SeverityViolation"></span>
        </div>
        <div class="form-group">
            <p>Date expired:</p>
            <input type="date" class="form-control item" name="DateExpired" placeholder="Date expired">
            <span class="text-danger error-DateExpired"></span>
        </div>
        <div class="form-group">
            <p>Description:</p>
            <textarea class="form-control" name="Description" placeholder="Description"></textarea>
            <span class="text-danger error-Description"></span>
        </div>
        <div class="form-group d-flex justify-content-center">
            <button type="button" class="btn btn-outline-success addViolation">Send</button>
            <button type="button" data-iziModal-close class="btn btn-outline-danger decline ml-2">Decline</button>
        </div>
    </form>
</div>