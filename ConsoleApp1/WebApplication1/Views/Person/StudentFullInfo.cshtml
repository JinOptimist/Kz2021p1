@model StudentViewModel


<h1>@ViewData["Title"]</h1>

<div class="container">
    <h1>@Model.Surname @Model.Name @Model.Patronymic</h1>

    <div class="card" style="width: 28rem;">
        @*<img src="..." class="card-img-top" alt="...">*@
        <div class="card-body">
            <h5 class="card-title" style="display:flex; justify-content:center; align-items:center;">Full Info</h5>
            <p class="card-text">Email: <b>@Model.Email</b></p>
            <p class="card-text">Birthday: <b>@Model.Birthday</b></p>
            <p class="card-text">University ID: <b>@Model.UniversityId</b></p>
            <p class="card-text">Faculty: <b>@Model.Faculty</b></p>
            <p class="card-text">Course Year: <b>@Model.CourseYear</b></p>
            <p class="card-text">Entered Year: <b>@Model.EnteredYear</b></p>
            <p class="card-text">Graduated Year: <b>@Model.GraduatedYear</b></p>
            <p class="card-text">Gpa: <b>@Model.Gpa</b></p>
            <p class="card-text">On Grant: <b>@Model.OnGrant</b></p>
        </div>
    </div>

</div>
