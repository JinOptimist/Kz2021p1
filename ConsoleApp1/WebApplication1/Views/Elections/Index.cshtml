@model List<ElectionViewModel>
@using WebApplication1.Services
@using WebApplication1.Models
@inject UserService userService

@section Scripts{
    <script src="~/js/elections/election.js"></script>
}



@{ var userId = userService.GetUser().Id; }

<div class="d-flex justify-content-between mb-1 bg-primary text-white p-2">

    <h4 class="card-title">
        Избирательный центр
    </h4>

    <div>
        <a asp-action="Create" class="btn btn-success align-self-center  border-light"> Создать выборы</a>
    </div>

</div>
@{
    if (TempData["Message"] != null)
    {
        <h3>Message: @TempData["Message"]</h3>
    }
    TempData.Keep("Message");
}


<div class="p-2 mt-3" >
    <h5 class="text-secondary">
        Список Выборов
    </h5>
</div>


<table class="table table-sm table-bordered m-1 р-1" id="tbElections">
    <tr>
        <th>
            ID
        </th>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
           Время начала
        </th>
        <th>
            Время окончания
        </th>
        
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">
                Нет зарегистрированных Выборов
            </td>
        </tr>

    }
    else
    {
        foreach (var election in Model)
        {
            <tr id="electionsRow">
                <td>
                    @election.Id
                </td>
                <td>
                    @election.Name
                </td>
                <td>
                    @election.Description
                </td>
                <td>
                    @election.Start
                </td>
                <td>
                    @election.End
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@election.Id">Редактировать</a>
                    
                    <button type="button" data-name="@election.Id" id="deleteElectionBtn" class="btn btn-sm btn-danger">Удалить</button>
                    
                    <a class="btn btn-sm btn-info"  id="detailsBtn"   asp-route-id="@election.Id"  asp-action="Details" >Посмотреть</a>
                    
                </td>
            </tr>
        }
    }
</table>












