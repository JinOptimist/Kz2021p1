@model LoginViewModel

<div class="container align-content-center back">
    <div class="row justify-content-center " >
        <div style="height: 20px;" class="mb-3">
        @{
            if (TempData.Peek("Message") != null)
            {
                <div class="alert alert-warning" role="alert">
                    @TempData.Peek("Message")
                </div>
            }
        }
        </div>
        <div class="col-sm-4 mt-2">
            <h4 class="text-info text-center  mt-5 ">Вход</h4>

            <form action="/Citizen/Login" method="post">

                @Html.HiddenFor(x => x.ReturnUrl)

                <div class="form-group mb-4">

                    <label for="email">Имя</label>

                    @Html.TextBoxFor(x => x.Name, new
                    {
                        @class = "form-control",
                        @placeholder = "Имя пользователя",
                        @required = "autofocus"

                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})

                    </small>
                </div>


                <div class="form-group mb-4">
                    <label for="password">Пароль</label>
                    @Html.TextBoxFor(x => x.Password, new
                    {
                        @class = "form-control",
                        @placeholder = "Пароль"
                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})
                    </small>
                </div>

                <div class="form-check mb-4">
                    <input type="checkbox" class="form-check-input" id="check">
                    <label class="form-check-label" for="check">Запомнить</label>
                </div>

                <button class="btn btn-primary btn-block" value="Login" type="submit">Войти</button>
            </form>
        </div>
    </div>
</div>