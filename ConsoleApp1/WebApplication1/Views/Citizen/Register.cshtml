@model LoginViewModel


<div class="container align-content-center back">
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <h4 class="text-info text-center mt-5">Регистрация</h4>
                    
            <form action="/Citizen/Register" method="post">

                <div class="form-group mt-4 mb-4">

                    <label for="email">Имя</label>

                    @Html.TextBoxFor(x => x.Name, new
                    {
                        @class = "form-control",
                        @placeholder = "Имя пользователя",
                        @required = "autofocus"

                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})

                    </small>
                </div>


                <div class="form-group mb-4">
                    <label for="password">Пароль</label>
                    @Html.TextBoxFor(x => x.Password, new
                    {
                        @class = "form-control",
                        @placeholder = "Пароль"
                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})

                    </small>
                </div>

                <button class="btn btn-primary btn-block" value="Register" type="submit">Зарегистрировать</button>
            </form>
        </div>
    </div>
</div>
