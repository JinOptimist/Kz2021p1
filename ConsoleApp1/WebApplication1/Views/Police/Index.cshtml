@section PoliceMain {
    <link rel="stylesheet" type="text/css" src="~/css/police/main.css">
    <script src="~/js/Police/police.js"></script>
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide" style="height: 400px; width: 100%;" src="https://www.dailynews.com/wp-content/uploads/2018/03/ldn-l-lapd-grad-0317-dc-1-1.jpg" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Become a police </h1>
                    <p>If you want protect you country, your city and have good expirience job with good people. You must think about police.</p>
                    <p><a class="btn btn-lg btn-primary" role="button" id="becomePolice" data-izimodal-open="#modal-custom">Join us</a></p>
                    <div id="modal-custom" data-iziModal-group="policec-academy-form">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @await Html.PartialAsync("_PoliceAcademyRequest")
                        }
                        else
                        {
                            <div class="close d-flex justify-content-end">
                                <p class="decline">X</p>
                            </div>
                            <div class=".not-register-request p-2 d-flex justify-content-center flex-column ">
                                <h3 class="text-center"> Пожалуйста пройдите регистрацию/ логин </h3>

                                <div class="btn-group">
                                    <button class="btn btn-outline-secondary">
                                        <a href="@Url.Action("Login", "Citizen")" class="nav-link text-dark">Login</a>
                                    </button>
                                    <button class="btn btn-outline-secondary">
                                        <a href="@Url.Action("Register", "Citizen")" class="nav-link text-dark">Register</a>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="second-slide" style="height: 400px; width: 100%;" src="https://i.pinimg.com/originals/76/55/3c/76553c7aa42f15614914934ac3c18dc5.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>More about our service.</h1>
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide" style="height: 400px; width: 100%;" src="https://upload.wikimedia.org/wikipedia/commons/a/a6/FBI_SWAT_team_Watervliet_Arsenal.jpg" alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>If you`re police.</h1>
                    <p>If you want become team swat member, read about us and leave a request.</p>
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">More</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


