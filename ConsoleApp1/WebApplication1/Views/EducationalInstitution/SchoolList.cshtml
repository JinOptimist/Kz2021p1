@model List<SchoolViewModel>


<h1>@ViewData["Title"]</h1>


<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">School ID</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Id</td>
                                <td>
                                    @Html.ActionLink(@item.Name, "SchoolFullInfo", new { IDSchool = item.Id })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>

